  %h4.modal-title= @modal_title

.modal-body
  %label=@folder.name
  = simple_form_for [@folder, @sharing_folder] do |f|
    = f.input :folder_id, as: :hidden
    = f.input :user_id, as: :select, collection: current_user.other_users.map{|u| [ "#{u.user_name} (#{u.email})", u.id]}
    = f.button :submit, class: "btn btn-primary"

.modal-footer
  %button{ class: "btn btn-default", data: { dismiss: "modal" } } Close


